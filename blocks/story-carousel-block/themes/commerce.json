{
	"story-carousel": {
		"styles": {
			"default": {
				"components": {
					"carousel-actions": {
						"margin-top": 0
					},
					"icon": {
						"block-size": "var(--global-font-size-9)",
						"inline-size": "var(--global-font-size-9)"
					}
				},
				"gap": "var(--global-spacing-2)"
			},
			"desktop": {
				"components": {
					"carousel-actions": {
						"margin-block-start": "-7rem"
					}
				}
			}
		}
	},
	"story-carousel-title": {
		"styles": {
			"default": {
				"font-size": "var(--heading-level-5-font-size)",
				"margin-inline-start": "auto",
				"margin-inline-end": "auto",
				"max-inline-size": "var(--content-scale-width)",
				"inline-size": "100%"
			},
			"desktop": {
				"font-size": "var(--heading-level-5-font-size)"
			}
		}
	},
	"story-carousel-card": {
		"styles": {
			"default": {
				"components": {
					"heading": {
						"-webkit-line-clamp": 2,
						"font-size": "var(--body-font-size-small)",
						"line-height": "var(--body-line-height-small)",
						"color": "var(--color-primary)"
					},
					"paragraph": {
						"-webkit-line-clamp": 3,
						"font-weight": "var(--body-font-weight-small)",
						"font-size": "var(--body-font-size-small)",
						"line-height": "var(--body-line-height-small)",
						"color": "var(--text-color)"
					}
				},
				"gap": "var(--global-spacing-1)"
			},
			"desktop": {}
		}
	}
}
