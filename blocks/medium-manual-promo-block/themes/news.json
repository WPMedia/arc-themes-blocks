{
	"medium-manual-promo": {
		"styles": {
			"default": {
				"clear": "both",
				"display": "table",
				"width": "100%",
				"components": {
					"attribution": {
						"color": "var(--text-color)",
						"font-size": "var(--body-font-size-small)",
						"line-height": "var(--body-line-height-small)"
					},
					"heading": {
						"color": "var(--text-color)",
						"font-size": "var(--heading-level-5-font-size)",
						"font-weight": "var(--heading-level-5-font-weight)",
						"line-height": "var(--heading-level-5-line-height)",
						"margin-bottom": "var(--global-spacing-4)"
					},
					"media-item": {
						"float": "right",
						"max-width": "100px"
					},
					"paragraph": {
						"display": "inline",
						"font-size": "var(--body-font-size)",
						"line-height": "var(--body-line-height)"
					}
				}
			},
			"desktop": {
				"components": {
					"media-item": {
						"float": "left",
						"margin": 0,
						"max-width": "33%"
					},
					"paragraph": {
						"display": "block"
					}
				}
			}
		}
	},
	"medium-manual-promo-show-image": {
		"styles": {
			"default": {
				"components": {
					"heading": {
						"width": "68%"
					}
				}
			},
			"desktop": {
				"components": {
					"paragraph": {
						"margin-left": "calc(33% + var(--global-spacing-6))"
					},
					"heading": {
						"margin-left": "calc(33% + var(--global-spacing-6))",
						"width": "auto"
					}
				}
			}
		}
	},
	"medium-manual-promo-headline-hover": {
		"styles": {
			"default": {
				"components": {
					"heading": {
						"color": "var(--text-color-subtle)"
					}
				}
			},
			"desktop": {}
		}
	},
	"medium-manual-promo-img": {
		"styles": {
			"default": {
				"image": {
					"opacity": 0.8
				}
			},
			"desktop": {}
		}
	}
}
