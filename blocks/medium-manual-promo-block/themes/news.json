{
	"medium-manual-promo": {
		"styles": {
			"default": {
				"clear": "both",
				"display": "table",
				"inline-size": "100%",
				"components": {
					"attribution": {
						"color": "var(--text-color)",
						"font-size": "var(--body-font-size-small)",
						"line-height": "var(--body-line-height-small)"
					},
					"heading": {
						"color": "var(--text-color)",
						"font-size": "var(--heading-level-5-font-size)",
						"font-weight": "var(--heading-level-5-font-weight)",
						"line-height": "var(--heading-level-5-line-height)",
						"margin-block-end": "var(--global-spacing-4)"
					},
					"link-hover": {
						"color": "var(--text-color-subtle)"
					},
					"media-item": {
						"float": "inline-end",
						"max-inline-size": "100px"
					},
					"paragraph": {
						"display": "inline",
						"font-size": "var(--body-font-size)",
						"line-height": "var(--body-line-height)"
					}
				}
			},
			"desktop": {
				"components": {
					"media-item": {
						"float": "inline-start",
						"margin-block-end": 0,
						"margin-block-start": 0,
						"margin-inline-end": 0,
						"margin-inline-start": 0,
						"max-inline-size": "33%"
					},
					"paragraph": {
						"display": "block"
					}
				}
			}
		}
	},
	"medium-manual-promo-show-image": {
		"styles": {
			"default": {
				"components": {
					"heading": {
						"inline-size": "68%"
					}
				}
			},
			"desktop": {
				"components": {
					"heading": {
						"inline-size": "auto",
						"margin-inline-start": "calc(33% + var(--global-spacing-6))"
					},
					"paragraph": {
						"margin-inline-start": "calc(33% + var(--global-spacing-6))"
					}
				}
			}
		}
	},
	"medium-manual-promo-img": {
		"styles": {
			"default": {
				"components": {
					"link-hover": {
						"opacity": 0.8
					}
				}
			},
			"desktop": {}
		}
	}
}
